{
  "name": "confi-platform",
  "version": "1.0.0",
  "description": "Confidential Finance Platform - Privacy-preserving invoicing and payroll on iExec",
  "main": "src/sdk/index.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "test": "jest",
    "wallet:create": "iexec wallet create",
    "wallet:show": "iexec wallet show",
    "wallet:import": "iexec wallet import",
    "iapp:init": "cd src/iapp && iapp init",
    "iapp:test": "cd src/iapp && iapp test",
    "iapp:deploy": "cd src/iapp && iapp deploy --chain arbitrum-sepolia",
    "deploy:contracts": "node scripts/deploy-contracts.js",
    "deploy:iapps": "node scripts/deploy-iapps.js",
    "setup:signers": "node scripts/setup-signers.js",
    "publish:orders": "node scripts/publish-orders.js",
    "verify": "node scripts/verify-deployment.js",
    "deploy:all": "npm run deploy:contracts && npm run deploy:iapps && npm run setup:signers && npm run publish:orders"
  },
  "dependencies": {
    "@iexec/dataprotector": "2.0.0-beta.19",
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "babel-loader": "^9.1.0",
    "chai": "^4.3.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "solc": "^0.8.28",
    "style-loader": "^3.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/confi-platform.git"
  },
  "keywords": [
    "blockchain",
    "confidential-computing",
    "iexec",
    "tee",
    "finance",
    "payroll",
    "invoicing",
    "privacy"
  ],
  "author": "ConFi Team",
  "license": "MIT"
}
